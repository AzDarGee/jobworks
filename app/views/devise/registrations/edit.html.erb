<div class="row">
  <div class="col-md-12">
    <section class="vh-100">
      <div class="container h-100 mb-4">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-lg-12 col-xl-11">
            <div class="card text-black mb-5">
              <div class="card-body p-md-5">
                <div class="row justify-content-center">
                  <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">
                      Edit <%= resource_name.to_s.humanize %>
                    </p>

                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                      <%= render "devise/shared/error_messages", resource: resource %>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <div class="form-outline flex-fill mb-0">
                          <div class="row">
                            <div class="col-md-12 edit-profile-picture">
                              <% if current_user.image.attached? %>
                                <%= image_tag current_user.image.url %> <br>
                              <% end %>
                            </div>
                          </div>

                          <%= f.file_field :image, autofocus: true, autocomplete: "Image", placeholder: "Profile Picture", id:"signup-image", class: "form-control" %>
                          <%= f.label :image, "Profile Picture", for: "signup-image", class: "form-label" %>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.text_field :username, autofocus: true, autocomplete: "Username", id:"signup-username", class: "form-control" %>
                          <%= f.label :username, for: "signup-username", class: "form-label" %>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.text_field :first_name, autofocus: true, autocomplete: "First name", id:"signup-first-name", class: "form-control" %>
                          <%= f.label :first_name, for: "signup-first-name", class: "form-label" %>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.text_field :last_name, autofocus: true, autocomplete: "Last name", id:"signup-last-name", class: "form-control" %>
                          <%= f.label :last_name, for: "signup-last-name", class: "form-label" %>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"signup-email", class: "form-control" %>
                          <%= f.label :email, for: "signup-email", class: "form-label" %>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.text_field :address, autofocus: true, autocomplete: "Last name", id:"signup-address", class: "form-control" %>
                          <%= f.label :address, for: "signup-address", class: "form-label" %>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.password_field :password, autocomplete: "Password", placeholder: "Password", class: "form-control" %>
                          <%= f.label :password, class: "form-label" %>
                          <% if @minimum_password_length %>
                            <em class="<%= 'form-label' %>">(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %><br />
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.password_field :password_confirmation, autocomplete: "Repeat password", placeholder: "Repeat password", id: "signup-password-confirmation", class: "form-control" %>
                          <%= f.label :password_confirmation, class: "form-label" %>
                        </div>
                      </div>

                      <div class="d-flex flex-row align-items-center mb-4">
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                          <%= f.password_field :current_password, autocomplete: "Current password", placeholder: "Current password", id: "signup-current-password", class: "form-control" %>
                          <%= f.label :current_password, class: "form-label" %><i>(we need your current password to confirm your changes)</i>
                        </div>
                      </div>

                      <div class="form-check d-flex justify-content-center mb-5">
                        <%= f.check_box :terms_of_service, class:"form-check-input me-2" %>
                        <label class="form-check-label" for="signup-terms">
                          I agree with all statements in <%= link_to "Terms of Service", terms_path %>
                        </label>
                      </div>

                      <div class="form-check justify-content-center mb-5">
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.radio_button :role, 'Employee' %> Employee
                          </div>
                        </div>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.radio_button :role, 'Employer' %> Employer
                          </div>
                        </div>


                      </div>

                      <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <%= f.submit "Save", class: "btn btn-primary btn-lg" %>
                      </div>

                    <% end %>

                    <hr color="black">

                    <h3>Cancel my account</h3>
                    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "btn btn-danger", data: { confirm: "Are you sure?" }, method: :delete %></p>
                    <%= link_to "Back", :back %>

                  </div>
                  <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                    <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-registration/draw1.png" class="img-fluid" alt="Sample image">

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
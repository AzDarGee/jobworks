<div class="row m-2">
    <h1>Jobs</h1>
    <%= link_to 'New Job', new_job_path, class: "mb-4" %>
    <% @jobs.each_slice(3) do |jobs| %>
      <div class="row">
        <% jobs.each do |job| %>
          <div class="col-md-4">
            <div class="card mb-4">
              <% if job.images %>
                <%= link_to job do %>
                  <%= image_tag job.images.first, class: "card-img-top" %>
                <% end %>
              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= link_to job.title, job %></h5>
                <h6>Images: <%= job.images.count %></h6>
                <p class="card-text">
                  <%= job.description %>
                </p>
              </div>
              <ul class="list-group list-group-flush">
                <% if job.remote_ok %>
                  <li class="list-group-item">Remote</li>
                <% else %>
                  <li class="list-group-item"><%= job.job_type %></li>
                <% end %>
                <li class="list-group-item"><%= job.job_type %></li>
                <li class="list-group-item"><%= job.location %></li>
              </ul>
              <div class="card-body">
                <a href="#" class="card-link">Card link</a>
                <a href="#" class="card-link">Another link</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
</div>




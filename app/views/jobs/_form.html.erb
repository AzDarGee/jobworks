<%= form_for(@job) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :url %>
    <%= form.text_field :url %>
  </div>

  <div class="field">
    <%= form.label :job_type %>
    <%= form.text_field :job_type %>
  </div>

  <div class="field">
    <%= form.label :location %>
    <%= form.text_field :location %>
  </div>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images %>
  </div>

  <div class="field">
    <%= form.label :job_author %>
    <%= form.text_field :job_author %>
  </div>

  <div class="field">
    <%= form.label :remote_ok %>
    <%= form.check_box :remote_ok %>
  </div>

  <div class="field">
    <%= form.label :apply_url %>
    <%= form.text_field :apply_url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
